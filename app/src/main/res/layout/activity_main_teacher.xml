<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/teacherfrag"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityTeacher"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/b2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome!"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="your profile"
        android:id="@+id/button_yourProfile"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="appoint new lessons"
            android:layout_marginLeft="10dp"
            android:id="@+id/appointNewLesson"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"/>/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="show lessons"
            android:id="@+id/button_show_lessons"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"/>/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="show students"
            android:layout_marginLeft="10dp"
            android:id="@+id/button_show_students"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"/>/>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yourText"
        android:textSize="30sp"

        android:textColor="@android:color/white"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/studentsRecycle"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lessonsRecycle"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>


</LinearLayout>
</FrameLayout>